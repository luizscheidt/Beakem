<% layout('layouts/boilerplate')%>

<div class="container text-center">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card text-center">
        <div class="card-header">
          <ul class="nav nav-pills card-header-pills">
            <li class="nav-item py-0">
              <p class="fs-3"><%= album.artist %></p>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <h3 class="card-title"><%= album.name %></h3>
          <p class="card-text fs-3">
            You've rated this album a <%= album.rating %>
          </p>
          <div class="container text-center">
            <div class="row">
              <div class="col">
                <form
                  action="/albums/<%= album._id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-danger">Delete this album</button>
                </form>
              </div>
              <div class="col">
                <form action="/albums/<%= album._id %>/edit">
                  <button class="btn btn-info">Edit this album</button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <a href="/albums?artist=<%= album.artist %>">
          <button class="btn btn-light">
            See all <%= album.artist %> albums you've rated so far
          </button>
        </a>
      </div>
    </div>
  </div>
</div>
