<% layout('layouts/boilerplate')%>

<div class="card">
  <h5 class="card-header">Update your album: <%= album.name %></h5>
  <form action="/albums/<%= album._id %>?_method=PATCH" method="POST">
    <div class="row">
      <div class="col">
        <label for="name">Album name</label>
        <input type="text" name="name" id="name" value="<%= album.name %>" />
      </div>
      <div class="col">
        <label for="rating">Rating</label>
        <input
          type="float"
          name="rating"
          id="rating"
          value="<%= album.rating %>"
        />
      </div>
      <div class="col">
        <label for="artist">Artist</label>
        <input
          type="text"
          name="artist"
          id="artist"
          value="<%= album.artist %>"
        />
      </div>
      <div class="row">
        <div class="mt-3">
          <button class="btn btn-light">Submit</button>
        </div>
      </div>
    </div>
  </form>

  <a href="/albums/<%= album._id %>"
    ><button class="btn btn-dark mt-2">Cancel</button></a
  >
</div>
