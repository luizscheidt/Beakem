<% layout('layouts/boilerplate')%>

<div>
  <% albums.sort(function (a, b) { %> <%return b.rating - a.rating; %> <% }); %>
</div>

<h1 style="color: #54b4d3"><%= artist %> Albums</h1>

<div>
  <form action="/albums/new">
    <button class="btn btn-outline-info">Add a new album to your list</button>
  </form>
</div>

<ul>
  <% for(let album of albums){%>
  <div class="row justify-content-md-center">
    <div class="col-md-4">
      <div class="card mb-3" style="width: 25rem; background-color: #f2faff">
        <div class="card-body">
          <h5 class="card-title"><%= album.name %> - <%= album.rating %></h5>
          <p class="card-text">
            <%= album.artist %>
            <a href="/albums/<%= album._id %>" class="btn btn-info me-1"
              >See album details</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>

  <% } %>
</ul>

<% if(artist !== 'All') {%>
<a href="/albums">See all albums</a>
<% } %>
